model ThievingAbilitiesToSubclass {
  id                        Int       @id @default(autoincrement())
  subclass                  String
  Otwieranie_Zamkow         Int
  Kradziez_Kieszonkowa      Int
  Ciche_Poruszanie          Int
  Krycie_W_Cieniu           Int
  Znajdywanie_Pulapek       Int
  Wykrywanie_Iluzji         Int
  Rozstawianie_Pulapek      Int
